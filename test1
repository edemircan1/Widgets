/** @jsx jsx */
import { React, jsx } from "jimu-core";

const MVT_STYLE_URL = "/styles/all/style.json?coverageLayer=rsrp_dbm";
const MANUAL_BEARER = "token";
const ARCGIS_API_VERSION = "4.32";

interface State {
  message: string;
  currentZoom: number;
}

// RSRP renk haritasƒ±
const RSRP_COLOR_MAP = [
  { min: -135, max: -126, color: '#313695', name: 'Very Poor' },
  { min: -126, max: -118, color: '#4575B4', name: 'Poor' },
  { min: -118, max: -109, color: '#74ADD1', name: 'Fair' },
  { min: -109, max: -100, color: '#ABD9E9', name: 'Good' },
  { min: -100, max: -92, color: '#E0F3F8', name: 'Very Good' },
  { min: -92, max: -83, color: '#FFFFBF', name: 'Excellent' },
  { min: -83, max: -75, color: '#FEE090', name: 'Outstanding' },
  { min: -75, max: -66, color: '#FDAE61', name: 'Superior' },
  { min: -66, max: -57, color: '#F46D43', name: 'Exceptional' },
  { min: -57, max: -49, color: '#D73027', name: 'Extraordinary' },
  { min: -49, max: 0, color: '#A50026', name: 'Ultimate' }
];

export default class Widget extends React.PureComponent<any, State> {
  private mapDiv: HTMLDivElement;
  private mapView: any;
  private map: any;
  private currentLayers: any[] = [];

  constructor(props) {
    super(props);
    this.state = {
      message: "Widget y√ºkleniyor...",
      currentZoom: 15
    };
  }

  componentDidMount() {
    this.loadArcGISAPI();
  }

  componentWillUnmount() {
    if (this.mapView) {
      this.mapView.destroy();
    }
  }

  loadArcGISAPI = () => {
    this.setState({ message: "üì¶ ArcGIS API y√ºkleniyor..." });

    if ((window as any).require) {
      this.setState({ message: "‚úÖ ArcGIS API y√ºklendi" });
      this.createMap();
      return;
    }

    const cssLink = document.createElement("link");
    cssLink.rel = "stylesheet";
    cssLink.href = `https://js.arcgis.com/${ARCGIS_API_VERSION}/esri/themes/dark/main.css`;
    document.head.appendChild(cssLink);

    const script = document.createElement("script");
    script.src = `https://js.arcgis.com/${ARCGIS_API_VERSION}/`;
    script.setAttribute('data-arcgis-api', ARCGIS_API_VERSION);
    script.onload = () => {
      this.setState({ message: "‚úÖ ArcGIS API y√ºklendi" });
      this.createMap();
    };
    script.onerror = () => {
      this.setState({ message: "‚ùå ArcGIS API y√ºklenemedi" });
    };
    document.head.appendChild(script);
  };

  createMap = () => {
    this.setState({ message: "üó∫Ô∏è Map olu≈üturuluyor..." });

    if (!this.mapDiv) {
      setTimeout(() => this.createMap(), 50);
      return;
    }

    if (!(window as any).require) {
      this.setState({ message: "‚ùå ArcGIS API loader bulunamadƒ±" });
      return;
    }

    (window as any).require([
      'esri/Map',
      'esri/views/MapView',
      'esri/layers/VectorTileLayer',
      'esri/request'
    ], (Map, MapView, VectorTileLayer, esriRequest) => {
      
      this.map = new Map({
        basemap: 'dark-gray-vector'
      });

      this.mapView = new MapView({
        container: this.mapDiv,
        map: this.map,
        center: [32, 39],
        zoom: 15,
        constraints: {
          snapToZoom: false,
          minZoom: 3,
          maxZoom: 22,
          rotationEnabled: false
        }
      });

      this.mapView.watch('zoom', (newZoom) => {
        this.setState({ currentZoom: Math.round(newZoom * 10) / 10 });
      });

      this.setState({ message: "‚úÖ Map hazƒ±r! Layer'lar y√ºkleniyor..." });

      // Setup fetch override for authorization
      const originalFetch = window.fetch;
      window.fetch = (url, options = {}) => {
        const urlStr = url.toString();
        if (urlStr.includes('oauth21') || urlStr.includes('vector/tile')) {
          return originalFetch(url, {
            ...options,
            headers: {
              ...(options['headers'] || {}),
              'Authorization': `Bearer ${MANUAL_BEARER}`
            }
          });
        }
        return originalFetch(url, options);
      };

      // YAKLA≈ûIM 5: Her RSRP range i√ßin ayrƒ± layer, filter ile g√∂r√ºn√ºrl√ºk kontrol
      this.createMultipleColoredLayers(VectorTileLayer, esriRequest);
      
    }, (err) => {
      this.setState({ message: `‚ùå Loader error: ${err?.message || err}` });
      console.error('AMD require error:', err);
    });
  };

  createMultipleColoredLayers = (VectorTileLayer, esriRequest) => {
    console.log("üé® Creating multiple layers with color filters...");
    this.setState({ message: "üì° Style JSON √ßekiliyor..." });
    
    // SADECE Bƒ∞R KEZ style JSON √ßek
    esriRequest(MVT_STYLE_URL, {
      headers: { 'Authorization': `Bearer ${MANUAL_BEARER}` },
      responseType: 'json'
    }).then(response => {
      const originalStyle = response.data;
      console.log("‚úÖ Original Style fetched:", originalStyle);
      this.setState({ message: "‚úÖ Style JSON alƒ±ndƒ±, layer'lar olu≈üturuluyor..." });

      const zoomConfigs = [
        { name: '3z', source: 'coverage_3z', minZoom: 0, maxZoom: 7 },
        { name: '7z', source: 'coverage_7z', minZoom: 7, maxZoom: 11 },
        { name: '11z', source: 'coverage_11z', minZoom: 11, maxZoom: 15 },
        { name: '15z', source: 'coverage_15z', minZoom: 15, maxZoom: 24 }
      ];

      let layerCount = 0;
      const totalLayers = zoomConfigs.length * RSRP_COLOR_MAP.length;

      // Her zoom level i√ßin
      zoomConfigs.forEach(zoomConfig => {
        console.log(`\nüìç Processing ${zoomConfig.name}...`);

        // Her RSRP range i√ßin ayrƒ± layer olu≈ütur
        RSRP_COLOR_MAP.forEach((colorRange, index) => {
          console.log(`  üé® Creating layer for ${colorRange.name} (${colorRange.min} to ${colorRange.max}): ${colorRange.color}`);

          // Bu range i√ßin style JSON olu≈ütur (originalStyle'dan kopyala)
          const customStyle = {
            version: 8,
            sources: {
              [zoomConfig.source]: originalStyle.sources[zoomConfig.source]
            },
            layers: [
              {
                id: `fill_${zoomConfig.source}_${index}`,
                type: 'fill',
                source: zoomConfig.source,
                'source-layer': 'data',
                minzoom: zoomConfig.minZoom,
                maxzoom: zoomConfig.maxZoom,
                filter: [
                  'all',
                  ['>=', ['get', 'rsrp_dbm'], colorRange.min],
                  ['<', ['get', 'rsrp_dbm'], colorRange.max]
                ],
                paint: {
                  'fill-color': colorRange.color,
                  'fill-opacity': 0.7
                }
              },
              {
                id: `line_${zoomConfig.source}_${index}`,
                type: 'line',
                source: zoomConfig.source,
                'source-layer': 'data',
                minzoom: zoomConfig.minZoom,
                maxzoom: zoomConfig.maxZoom,
                filter: [
                  'all',
                  ['>=', ['get', 'rsrp_dbm'], colorRange.min],
                  ['<', ['get', 'rsrp_dbm'], colorRange.max]
                ],
                paint: {
                  'line-color': colorRange.color,
                  'line-opacity': 0.9,
                  'line-width': 1
                }
              }
            ]
          };

          const layer = new VectorTileLayer({
            style: customStyle,
            minScale: 0,
            maxScale: 0,
            title: `${zoomConfig.name}_${colorRange.name}`,
            opacity: 1.0
          });

          layer.when(() => {
            layerCount++;
            console.log(`    ‚úÖ ${zoomConfig.name}_${colorRange.name} loaded (${layerCount}/${totalLayers})`);
            this.setState({ 
              message: `‚úÖ Layer'lar y√ºkleniyor... ${layerCount}/${totalLayers}` 
            });
          }).catch(err => {
            console.error(`    ‚ùå ${zoomConfig.name}_${colorRange.name} error:`, err);
          });

          this.map.add(layer);
          this.currentLayers.push(layer);
        });
      });

      this.setState({ 
        message: `üöÄ ${totalLayers} layer olu≈üturuldu! Y√ºkleniyor...` 
      });

    }).catch(err => {
      this.setState({ message: `‚ùå Style JSON fetch failed: ${err.message}` });
      console.error("Style JSON fetch error:", err);
    });
  };

  render() {
    const { message, currentZoom } = this.state;

    return (
      <div style={{ width: "100%", height: "100%", position: "relative" }}>
        <div 
          ref={el => this.mapDiv = el}
          style={{ width: "100%", height: "100%" }}
        />

        {/* Status Panel */}
        <div style={{
          position: "absolute",
          top: "10px",
          left: "10px",
          background: "rgba(0,0,0,0.9)",
          color: "white",
          padding: "15px",
          borderRadius: "8px",
          zIndex: 9999,
          fontFamily: "monospace",
          fontSize: "11px",
          maxWidth: "350px"
        }}>
          <div style={{ marginBottom: "10px", fontWeight: "bold", color: "#4CAF50", fontSize: "13px" }}>
            üé® MULTI-LAYER COLOR APPROACH
          </div>
          
          <div style={{ marginBottom: "10px", padding: "8px", background: "rgba(255,255,255,0.1)", borderRadius: "4px" }}>
            <div style={{ fontSize: "10px", color: "#aaa" }}>Zoom: {currentZoom}</div>
            <div style={{ fontSize: "10px", color: "#aaa", marginTop: "5px" }}>
              Layers: {this.currentLayers.length}
            </div>
          </div>

          <div style={{ fontSize: "10px", lineHeight: "1.5", color: "#ddd" }}>
            {message}
          </div>

          <div style={{ marginTop: "10px", fontSize: "9px", color: "#888", lineHeight: "1.4" }}>
            üí° Yakla≈üƒ±m: Her RSRP aralƒ±ƒüƒ± i√ßin ayrƒ± VectorTileLayer + Filter kullanƒ±ldƒ±
          </div>
        </div>

        {/* Color Legend */}
        <div style={{
          position: "absolute",
          top: "10px",
          right: "10px",
          background: "rgba(0,0,0,0.9)",
          color: "white",
          padding: "12px",
          borderRadius: "8px",
          zIndex: 9999,
          fontFamily: "monospace",
          fontSize: "10px",
          maxWidth: "180px"
        }}>
          <div style={{ marginBottom: "8px", fontWeight: "bold", fontSize: "11px" }}>
            üìä RSRP Legend
          </div>
          {RSRP_COLOR_MAP.map((range, idx) => (
            <div key={idx} style={{ display: "flex", alignItems: "center", marginBottom: "4px" }}>
              <div style={{ 
                width: "20px", 
                height: "12px", 
                background: range.color, 
                marginRight: "6px",
                border: "1px solid #555",
                borderRadius: "2px"
              }}></div>
              <div style={{ fontSize: "9px" }}>
                {range.min} to {range.max}
              </div>
            </div>
          ))}
        </div>
      </div>
    );
  }
}
