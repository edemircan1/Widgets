/** @jsx jsx */
import { React, jsx } from ‘jimu-core’;
import { AllWidgetSettingProps } from ‘jimu-for-builder’;
import { TextInput } from ‘jimu-ui’;

export default class Setting extends React.PureComponent<AllWidgetSettingProps<any>> {

onDfwUrlChange = (evt: React.FormEvent<HTMLInputElement>) => {
this.props.onSettingChange({
id: this.props.id,
config: this.props.config.set(‘dfwLteUrl’, evt.currentTarget.value)
});
};

onKpisUrlChange = (evt: React.FormEvent<HTMLInputElement>) => {
this.props.onSettingChange({
id: this.props.id,
config: this.props.config.set(‘kpisUrl’, evt.currentTarget.value)
});
};

render() {
return (
<div className="widget-setting p-3">
<h5>Feature Service URLs</h5>

```
    <div className="mt-3">
      <label>
        <strong>DFW_TX_LTE Layer URL:</strong>
      </label>
      <TextInput
        type="text"
        placeholder="https://services.arcgis.com/.../FeatureServer/0"
        value={this.props.config.dfwLteUrl || ''}
        onChange={this.onDfwUrlChange}
        className="w-100 mt-1"
      />
      <small className="text-muted d-block mt-1">
        Enter the full URL to your DFW_TX_LTE feature layer
      </small>
    </div>

    <div className="mt-3">
      <label>
        <strong>KPIS Layer URL:</strong>
      </label>
      <TextInput
        type="text"
        placeholder="https://services.arcgis.com/.../FeatureServer/0"
        value={this.props.config.kpisUrl || ''}
        onChange={this.onKpisUrlChange}
        className="w-100 mt-1"
      />
      <small className="text-muted d-block mt-1">
        Enter the full URL to your KPIS layer
      </small>
    </div>
  </div>
);
```

}
}