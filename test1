import { ImmutableObject } from 'seamless-immutable'

export interface Config {
  defaultRadius: number
  showBearings: boolean
  showDistances: boolean
  angleIncrement: number
  lineWidth: number
  colors: {
    northLine: string
    measurementLine: string
    dynamicLine: string
    protractorCircle: string
  }
  telecomSettings: {
    antennaTypes: string[]
    frequencyBands: string[]
    coveragePatterns: string[]
  }
}

export type IMConfig = ImmutableObject<Config>

export const defaultConfig: IMConfig = {
  defaultRadius: 1000,
  showBearings: true,
  showDistances: true,
  angleIncrement: 5,
  lineWidth: 2,
  colors: {
    northLine: '#00FF00',
    measurementLine: '#FFA500',
    dynamicLine: '#FF00FF',
    protractorCircle: '#808080'
  },
  telecomSettings: {
    antennaTypes: ['Omnidirectional', 'Directional', 'Sector', 'Yagi', 'Panel'],
    frequencyBands: ['700MHz', '850MHz', '1900MHz', '2100MHz', '2600MHz', '3500MHz'],
    coveragePatterns: ['360°', '120°', '90°', '60°', '30°']
  }
}
