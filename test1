/** @jsx jsx */
import { React, jsx } from "jimu-core";
import { JimuMapViewComponent, JimuMapView } from "jimu-arcgis";

const MVT_STYLE_URL = "https://your-api.com/api/vector/styles/all/style.json?coverageLayer=rsrp_dbm_poly";
const MANUAL_BEARER = "your_bearer_token_here";

export default class Widget extends React.PureComponent<any, any> {
  private originalFetch = window.fetch;

  componentDidMount() {
    const self = this;
    window.fetch = function(url, options = {}) {
      const urlStr = url.toString();
      if (urlStr.includes('your-api.com')) {
        return self.originalFetch(url, {
          ...options,
          headers: {
            ...(options['headers'] || {}),
            'Authorization': `Bearer ${MANUAL_BEARER}`
          }
        });
      }
      return self.originalFetch(url, options);
    };
  }

  componentWillUnmount() {
    window.fetch = this.originalFetch;
  }

  onActiveViewChange = (jmv: JimuMapView) => {
    if (!jmv) return;

    (window as any).require(['esri/layers/VectorTileLayer'], (VectorTileLayer) => {
      console.log("‚úÖ VectorTileLayer y√ºklendi");
      
      fetch(MVT_STYLE_URL)
        .then(res => res.json())
        .then(styleJson => {
          console.log("üìÑ STYLE JSON TAM HALƒ∞:", JSON.stringify(styleJson, null, 2));
          console.log("üìÑ Sources:", styleJson.sources);
          console.log("üìÑ Layers:", styleJson.layers);
          
          // SADECE LOG - layer eklemiyoruz ≈üimdilik
        })
        .catch(err => console.error("‚ùå Fetch hatasƒ±:", err));
    });
  };

  render() {
    return (
      <div style={{ width: "100%", height: "100%" }}>
        <JimuMapViewComponent
          useMapWidgetId={this.props.useMapWidgetIds?.[0]}
          onActiveViewChange={this.onActiveViewChange}
        />
      </div>
    );
  }
}
