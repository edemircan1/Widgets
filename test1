/** @jsx jsx */
import { React, jsx } from "jimu-core";

const MVT_STYLE_URL = "/styles/all/style.json?coverageLayer=rsrp_dbm";
const MANUAL_BEARER = "token";
const ARCGIS_API_VERSION = "4.32";

interface State {
  message: string;
  currentZoom: number;
  currentTest: string;
}

export default class Widget extends React.PureComponent<any, State> {
  private mapDiv: HTMLDivElement;
  private mapView: any;
  private map: any;
  private currentLayers: any[] = [];

  constructor(props) {
    super(props);
    this.state = {
      message: "Widget yÃ¼kleniyor...",
      currentZoom: 15,
      currentTest: "none"
    };
  }

  componentDidMount() {
    this.loadArcGISAPI();
  }

  componentWillUnmount() {
    if (this.mapView) {
      this.mapView.destroy();
    }
  }

  loadArcGISAPI = () => {
    this.setState({ message: "ğŸ“¦ ArcGIS API yÃ¼kleniyor..." });

    if ((window as any).require) {
      this.setState({ message: "âœ… ArcGIS API yÃ¼klendi" });
      this.createMap();
      return;
    }

    const cssLink = document.createElement("link");
    cssLink.rel = "stylesheet";
    cssLink.href = `https://js.arcgis.com/${ARCGIS_API_VERSION}/esri/themes/dark/main.css`;
    document.head.appendChild(cssLink);

    const script = document.createElement("script");
    script.src = `https://js.arcgis.com/${ARCGIS_API_VERSION}/`;
    script.setAttribute('data-arcgis-api', ARCGIS_API_VERSION);
    script.onload = () => {
      this.setState({ message: "âœ… ArcGIS API yÃ¼klendi" });
      this.createMap();
    };
    script.onerror = () => {
      this.setState({ message: "âŒ ArcGIS API yÃ¼klenemedi" });
    };
    document.head.appendChild(script);
  };

  createMap = () => {
    this.setState({ message: "ğŸ—ºï¸ Map oluÅŸturuluyor..." });

    if (!this.mapDiv) {
      setTimeout(() => this.createMap(), 50);
      return;
    }

    if (!(window as any).require) {
      this.setState({ message: "âŒ ArcGIS API loader bulunamadÄ±" });
      return;
    }

    (window as any).require([
      'esri/Map',
      'esri/views/MapView'
    ], (Map, MapView) => {
      
      this.map = new Map({
        basemap: 'dark-gray-vector'
      });

      this.mapView = new MapView({
        container: this.mapDiv,
        map: this.map,
        center: [32, 39],
        zoom: 15,
        constraints: {
          snapToZoom: false,
          minZoom: 3,
          maxZoom: 22,
          rotationEnabled: false
        }
      });

      this.mapView.watch('zoom', (newZoom) => {
        this.setState({ currentZoom: Math.round(newZoom * 10) / 10 });
      });

      this.setState({ message: "âœ… Map hazÄ±r! Test seÃ§in..." });

      // Setup fetch override for authorization
      const originalFetch = window.fetch;
      window.fetch = (url, options = {}) => {
        const urlStr = url.toString();
        if (urlStr.includes('oauth21') || urlStr.includes('vector/tile')) {
          return originalFetch(url, {
            ...options,
            headers: {
              ...(options['headers'] || {}),
              'Authorization': `Bearer ${MANUAL_BEARER}`
            }
          });
        }
        return originalFetch(url, options);
      };
      
    }, (err) => {
      this.setState({ message: `âŒ Loader error: ${err?.message || err}` });
      console.error('AMD require error:', err);
    });
  };

  clearLayers = () => {
    this.currentLayers.forEach(layer => {
      this.map.remove(layer);
    });
    this.currentLayers = [];
  };

  // Color mapping from API
  getColorForRSRP = (rsrp: number): string => {
    if (rsrp >= -49) return '#A50026';
    if (rsrp >= -57) return '#D73027';
    if (rsrp >= -66) return '#F46D43';
    if (rsrp >= -75) return '#FDAE61';
    if (rsrp >= -83) return '#FEE090';
    if (rsrp >= -92) return '#FFFFBF';
    if (rsrp >= -100) return '#E0F3F8';
    if (rsrp >= -109) return '#ABD9E9';
    if (rsrp >= -118) return '#74ADD1';
    if (rsrp >= -126) return '#4575B4';
    return '#313695';
  };

  applyTest = (testName: string) => {
    this.setState({ message: `ğŸ§ª Test: ${testName}...`, currentTest: testName });
    this.clearLayers();

    (window as any).require([
      'esri/layers/VectorTileLayer',
      'esri/layers/FeatureLayer',
      'esri/layers/GraphicsLayer',
      'esri/request',
      'esri/renderers/ClassBreaksRenderer',
      'esri/symbols/SimpleFillSymbol',
      'esri/symbols/SimpleLineSymbol',
      'esri/Graphic'
    ], (VectorTileLayer, FeatureLayer, GraphicsLayer, esriRequest, ClassBreaksRenderer, SimpleFillSymbol, SimpleLineSymbol, Graphic) => {

      console.log(`\nğŸ§ª ========== TEST: ${testName} ==========`);

      switch(testName) {
        case 'baseline':
          this.testBaseline(VectorTileLayer, esriRequest);
          break;
        case 'solution_a':
          this.solutionA_CustomLayer(GraphicsLayer, esriRequest, Graphic, SimpleFillSymbol);
          break;
        case 'solution_b':
          this.solutionB_FeatureLayer(FeatureLayer, esriRequest, ClassBreaksRenderer, SimpleFillSymbol);
          break;
        case 'solution_c':
          this.solutionC_PostProcess(VectorTileLayer, esriRequest);
          break;
      }
    });
  };

  // BASELINE: Original (gri gÃ¶rÃ¼nen)
  testBaseline = (VectorTileLayer, esriRequest) => {
    console.log("ğŸ“‹ BASELINE: Original API style");
    
    esriRequest(MVT_STYLE_URL, {
      headers: { 'Authorization': `Bearer ${MANUAL_BEARER}` },
      responseType: 'json'
    }).then(response => {
      const originalStyle = response.data;

      const zoomConfigs = [
        { name: '3z', source: 'coverage_3z', minZoom: 0, maxZoom: 7 },
        { name: '7z', source: 'coverage_7z', minZoom: 7, maxZoom: 11 },
        { name: '11z', source: 'coverage_11z', minZoom: 11, maxZoom: 15 },
        { name: '15z', source: 'coverage_15z', minZoom: 15, maxZoom: 24 }
      ];

      zoomConfigs.forEach(config => {
        const customStyle = {
          version: 8,
          sources: {
            [config.source]: originalStyle.sources[config.source]
          },
          layers: originalStyle.layers.filter(layer => 
            layer.source === config.source
          ).map(layer => ({
            ...layer,
            minzoom: config.minZoom,
            maxzoom: config.maxZoom
          }))
        };

        const layer = new VectorTileLayer({
          style: customStyle,
          minScale: 0,
          maxScale: 0,
          title: `Baseline ${config.name}`
        });

        this.map.add(layer);
        this.currentLayers.push(layer);
      });

      this.setState({ message: "âœ… Baseline yÃ¼klendi (gri MVT)" });
    }).catch(err => {
      this.setState({ message: `âŒ Baseline failed: ${err.message}` });
    });
  };

  // SOLUTION A: Custom GraphicsLayer - Tile data'yÄ± Ã§ekip Graphics olarak Ã§iz
  solutionA_CustomLayer = (GraphicsLayer, esriRequest, Graphic, SimpleFillSymbol) => {
    console.log("ğŸ“‹ SOLUTION A: Custom GraphicsLayer with manual coloring");
    
    this.setState({ message: "âš ï¸ Solution A: MVT tile'larÄ±nÄ± feature'lara Ã§evirip manuel renklendirme yapÄ±lacak. Bu yÃ¶ntem performance aÃ§Ä±sÄ±ndan aÄŸÄ±r olabilir ve tile parsing gerektirir. Åu anda MVT PBF parsing implementasyonu gerekiyor..." });
    
    // NOT: Bu Ã§Ã¶zÃ¼m iÃ§in MVT tile'larÄ± decode edip feature'lara Ã§evirmek gerekiyor
    // Bu Ã§ok complex bir iÅŸlem ve protobuf parsing library gerektirir
    // Ã–rnek: @mapbox/vector-tile library ile tile parse edilir
    
    console.log("âš ï¸ Bu Ã§Ã¶zÃ¼m MVT tile parsing library gerektirir (@mapbox/vector-tile)");
    console.log("Tile URL'den .pbf dosyalarÄ± Ã§ekilip decode edilmesi gerekir");
    console.log("Her feature iÃ§in rsrp_dbm deÄŸerine gÃ¶re renk atanÄ±r");
    console.log("Graphics olarak haritaya eklenir");
    console.log("Performance: DÃ¼ÅŸÃ¼k (her tile iÃ§in parsing)");
  };

  // SOLUTION B: FeatureLayer ile ClassBreaksRenderer
  solutionB_FeatureLayer = (FeatureLayer, esriRequest, ClassBreaksRenderer, SimpleFillSymbol) => {
    console.log("ğŸ“‹ SOLUTION B: Convert to FeatureLayer with ClassBreaksRenderer");
    
    this.setState({ message: "âš ï¸ Solution B: MVT'yi FeatureLayer'a Ã§evirmek iÃ§in feature service gerekiyor. VectorTileLayer'Ä± direkt FeatureLayer'a Ã§eviremiyoruz..." });
    
    // NOT: Bu Ã§Ã¶zÃ¼m iÃ§in:
    // 1. MVT tile service'i yerine feature service gerekir
    // VEYA
    // 2. MVT tile'larÄ± parse edip in-memory feature collection oluÅŸturulmasÄ± gerekir
    
    console.log("âš ï¸ Bu Ã§Ã¶zÃ¼m iÃ§in:");
    console.log("- MVT yerine Feature Service URL'i gerekir");
    console.log("- VEYA MVT tile'larÄ± parse edip FeatureCollection oluÅŸturulur");
    console.log("- ClassBreaksRenderer ile manuel renklendirme yapÄ±lÄ±r");
    
    // Ã–rnek ClassBreaksRenderer (eÄŸer FeatureLayer olsaydÄ±):
    const renderer = new ClassBreaksRenderer({
      field: 'rsrp_dbm',
      classBreakInfos: [
        { minValue: -135, maxValue: -126, symbol: new SimpleFillSymbol({ color: [49, 54, 149, 180] }) },
        { minValue: -126, maxValue: -118, symbol: new SimpleFillSymbol({ color: [69, 117, 180, 180] }) },
        { minValue: -118, maxValue: -109, symbol: new SimpleFillSymbol({ color: [116, 173, 209, 180] }) },
        { minValue: -109, maxValue: -100, symbol: new SimpleFillSymbol({ color: [171, 217, 233, 180] }) },
        { minValue: -100, maxValue: -92, symbol: new SimpleFillSymbol({ color: [224, 243, 248, 180] }) },
        { minValue: -92, maxValue: -83, symbol: new SimpleFillSymbol({ color: [255, 255, 191, 180] }) },
        { minValue: -83, maxValue: -75, symbol: new SimpleFillSymbol({ color: [254, 224, 144, 180] }) },
        { minValue: -75, maxValue: -66, symbol: new SimpleFillSymbol({ color: [253, 174, 97, 180] }) },
        { minValue: -66, maxValue: -57, symbol: new SimpleFillSymbol({ color: [244, 109, 67, 180] }) },
        { minValue: -57, maxValue: -49, symbol: new SimpleFillSymbol({ color: [215, 48, 39, 180] }) },
        { minValue: -49, maxValue: 0, symbol: new SimpleFillSymbol({ color: [165, 0, 38, 180] }) }
      ]
    });
    
    console.log("ClassBreaksRenderer oluÅŸturuldu:", renderer);
    console.log("Ama FeatureLayer olmadÄ±ÄŸÄ± iÃ§in uygulanamÄ±yor");
  };

  // SOLUTION C: Post-process VectorTileLayer - Layer yÃ¼klendikten sonra style manipÃ¼lasyonu
  solutionC_PostProcess = (VectorTileLayer, esriRequest) => {
    console.log("ğŸ“‹ SOLUTION C: Post-process VectorTileLayer style manipulation");
    
    esriRequest(MVT_STYLE_URL, {
      headers: { 'Authorization': `Bearer ${MANUAL_BEARER}` },
      responseType: 'json'
    }).then(response => {
      const originalStyle = response.data;

      const zoomConfigs = [
        { name: '15z', source: 'coverage_15z', minZoom: 15, maxZoom: 24 }
      ];

      zoomConfigs.forEach(config => {
        // Simplified style - sadece source
        const customStyle = {
          version: 8,
          sources: {
            [config.source]: originalStyle.sources[config.source]
          },
          layers: [
            {
              id: `fill_${config.source}`,
              type: 'fill',
              source: config.source,
              'source-layer': 'data',
              minzoom: config.minZoom,
              maxzoom: config.maxZoom,
              paint: {
                'fill-color': '#FF0000',
                'fill-opacity': 0.7
              }
            }
          ]
        };

        const layer = new VectorTileLayer({
          style: customStyle,
          minScale: 0,
          maxScale: 0,
          title: `PostProcess ${config.name}`
        });

        // Layer yÃ¼klendikten sonra manipÃ¼lasyon dene
        layer.when(() => {
          console.log("âœ… Layer loaded, attempting post-process manipulation...");
          
          // Deneme 1: loadedLayers property'sine eriÅŸim
          console.log("Layer properties:", Object.keys(layer));
          console.log("Layer.style:", layer.style);
          
          // Deneme 2: Style JSON'Ä± runtime'da deÄŸiÅŸtirme
          try {
            // API'dan gelen doÄŸru renk kurallarÄ±yla gÃ¼ncelle
            const newStyle = {
              ...customStyle,
              layers: originalStyle.layers.filter(l => l.source === config.source).map(l => ({
                ...l,
                minzoom: config.minZoom,
                maxzoom: config.maxZoom,
                paint: {
                  ...l.paint,
                  'fill-color': [
                    'step',
                    ['get', 'rsrp_dbm'],
                    '#313695',
                    -126, '#4575B4',
                    -118, '#74ADD1',
                    -109, '#ABD9E9',
                    -100, '#E0F3F8',
                    -92, '#FFFFBF',
                    -83, '#FEE090',
                    -75, '#FDAE61',
                    -66, '#F46D43',
                    -57, '#D73027',
                    -49, '#A50026'
                  ]
                }
              }))
            };
            
            console.log("Attempting to update style to:", newStyle);
            layer.style = newStyle;
            console.log("âœ… Style updated (maybe?)");
            
          } catch (err) {
            console.error("âŒ Post-process manipulation failed:", err);
          }
          
          // Deneme 3: Internal properties
          if ((layer as any)._style) {
            console.log("Layer has _style property:", (layer as any)._style);
          }
          
          if ((layer as any).loadedLayers) {
            console.log("Layer.loadedLayers:", (layer as any).loadedLayers);
          }
          
        }).catch(err => {
          console.error("âŒ Layer load error:", err);
        });

        this.map.add(layer);
        this.currentLayers.push(layer);
      });

      this.setState({ message: "âœ… Solution C: Post-process deneniyor (console'a bak)" });
    }).catch(err => {
      this.setState({ message: `âŒ Solution C failed: ${err.message}` });
    });
  };

  render() {
    const { message, currentZoom, currentTest } = this.state;

    return (
      <div style={{ width: "100%", height: "100%", position: "relative" }}>
        <div 
          ref={el => this.mapDiv = el}
          style={{ width: "100%", height: "100%" }}
        />

        {/* Test Control Panel */}
        <div style={{
          position: "absolute",
          top: "10px",
          right: "10px",
          background: "rgba(0,0,0,0.95)",
          color: "white",
          padding: "15px",
          borderRadius: "8px",
          zIndex: 9999,
          fontFamily: "monospace",
          fontSize: "11px",
          maxWidth: "300px"
        }}>
          <div style={{ marginBottom: "12px", fontWeight: "bold", color: "#4CAF50", fontSize: "13px" }}>
            ğŸ”§ MANUAL COLOR SOLUTIONS
          </div>
          
          <div style={{ marginBottom: "10px", padding: "8px", background: "rgba(255,255,255,0.1)", borderRadius: "4px", fontSize: "10px" }}>
            <div>Zoom: {currentZoom}</div>
            <div>Test: {currentTest || "none"}</div>
          </div>

          <button onClick={() => this.applyTest('baseline')} style={{...buttonStyle, background: '#666'}}>
            BASELINE (gri MVT)
          </button>

          <div style={{ fontSize: "10px", color: "#FFD700", margin: "10px 0 5px 0" }}>
            Manuel Renklendirme:
          </div>

          <button onClick={() => this.applyTest('solution_a')} style={buttonStyle}>
            A) Custom GraphicsLayer
          </button>

          <button onClick={() => this.applyTest('solution_b')} style={buttonStyle}>
            B) FeatureLayer + Renderer
          </button>

          <button onClick={() => this.applyTest('solution_c')} style={buttonStyle}>
            C) Post-Process Style
          </button>

          <button 
            onClick={() => {
              this.clearLayers();
              this.setState({ message: "âœ… Temizlendi", currentTest: "none" });
            }} 
            style={{...buttonStyle, background: "#f44336", marginTop: "10px"}}
          >
            ğŸ—‘ï¸ Clear
          </button>

          <div style={{ fontSize: "9px", color: "#aaa", marginTop: "10px", lineHeight: "1.3" }}>
            ğŸ’¡ A: Tile parsing + Graphics<br/>
            ğŸ’¡ B: Feature Service gerekir<br/>
            ğŸ’¡ C: Runtime style manipulation
          </div>
        </div>

        {/* Status Panel */}
        <div style={{
          position: "absolute",
          bottom: "10px",
          left: "10px",
          background: "rgba(0,0,0,0.9)",
          color: "white",
          padding: "12px",
          borderRadius: "5px",
          zIndex: 9999,
          fontFamily: "monospace",
          fontSize: "10px",
          maxWidth: "400px",
          maxHeight: "200px",
          overflowY: "auto"
        }}>
          <div style={{ color: "#4CAF50", marginBottom: "5px" }}>Status:</div>
          <div style={{ fontSize: "10px", lineHeight: "1.4" }}>{message}</div>
        </div>
      </div>
    );
  }
}

const buttonStyle = {
  width: "100%",
  padding: "10px 8px",
  marginBottom: "5px",
  background: "#2196F3",
  color: "white",
  border: "none",
  borderRadius: "4px",
  cursor: "pointer",
  fontSize: "11px",
  textAlign: "left" as const,
  fontFamily: "monospace"
};
